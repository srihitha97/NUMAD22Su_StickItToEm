<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StickersActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/stkrInf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/sticker1"
                android:layout_width="match_parent"
                android:layout_height="564dp"
                android:layout_below="@+id/stkrInf"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="85dp"
                android:onClick="stickerBtn"
                android:padding="10dp"
                android:src="@drawable/sticker1"
                android:tag="sticker1"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/sticker2"
                android:layout_width="match_parent"
                android:layout_height="721dp"
                android:layout_below="@+id/sticker1"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="0dp"
                android:onClick="stickerBtn"
                android:padding="10dp"
                android:src="@drawable/s2"
                android:tag="sticker2"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/sticker3"
                android:layout_width="412dp"
                android:layout_height="587dp"
                android:layout_below="@+id/sticker2"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="0dp"
                android:onClick="stickerBtn"
                android:padding="10dp"
                android:src="@drawable/s6"
                android:tag="sticker3"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/sticker4"
                android:layout_width="412dp"
                android:layout_height="369dp"
                android:layout_below="@+id/sticker3"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="0dp"
                android:onClick="stickerBtn"
                android:padding="10dp"
                android:src="@drawable/sticker4"
                android:tag="sticker4"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/sticker5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sticker4"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="0dp"
                android:onClick="stickerBtn"
                android:padding="10dp"
                android:src="@drawable/sticker5"
                android:tag="sticker5"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/sticker6"
                android:layout_width="match_parent"
                android:layout_height="476dp"
                android:layout_below="@+id/sticker5"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="0dp"
                android:onClick="stickerBtn"
                android:padding="10dp"
                android:src="@drawable/sticker6"
                android:tag="sticker6"
                tools:ignore="ContentDescription" />

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>